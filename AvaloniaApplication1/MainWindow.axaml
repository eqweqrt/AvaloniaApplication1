<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="300" Height="250"
        x:Class="AvaloniaApplication1.MainWindow"
        Title="Authorization" WindowStartupLocation="CenterScreen">
    <StackPanel Orientation="Vertical"
                Margin="20">
        <TextBox Name="LoginTBox"
                 Watermark="Enter Login"
                 Margin="0 0 0 20"/>
        <TextBox Name="PasswordTBox"
                 Watermark="Enter Password"
                 PasswordChar="*"
                 Margin="0 0 0 20"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
            <Button Content="Sign In"
                    Name="SigninBtn"
                    Click="SigninBtn_OnClick"
                    Width="125"
                    HorizontalContentAlignment="Center"/>
            <Button Content="Sign Up"
                    Name="SignupBtn"
                    Click="SignupBtn_OnClick"
                    Width="125"
                    HorizontalContentAlignment="Center"/>
        </StackPanel>
    </StackPanel>
</Window>
